# Include path
#
# OCAMLINCLUDES +=

#
# Compile native or byte code? 
#
# The default values are defined as follows:
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = $(not $(OCAMLOPT_EXISTS))


# Various options

OCAMLFLAGS    += -g
OCAMLCFLAGS   += -g
# OCAMLOPTFLAGS +=
# OCAML_LINK_FLAGS +=
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Generated files
#
# Workaround for the fact that ocamldep does not pay attention to .mll
# and .mly files.
#
OCamlGeneratedFiles(parser.ml lexer.ml)

FILES[] =
    main
    lexer
    parser
    stree
    generator
    util
    server_template
    keeper_template
    idl_template

PROGRAM = jenerator
# OCAML_LIBS +=
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS +=

.DEFAULT: $(OCamlProgram $(PROGRAM), $(FILES))

test: $(PROGRAM)  ../../src/server/recommender.hpp
	./$(PROGRAM) ../../src/server/recommender.hpp -i
	-diff recommender.idl ../../src/server/recommender.idl
	-diff recommender_impl.cpp ../../src/server/recommender_impl.cpp
	-diff recommender_keeper.cpp ../../src/server/recommender_keeper.cpp

OCamlProgramInstall(install, /usr/local/bin, $(PROGRAM), $(FILES))
